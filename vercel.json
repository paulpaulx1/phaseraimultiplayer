{
    "version": 2,
    "builds": [
      {
        "src": "server/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "buildCommand": "npm run build"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/api/$1"
      },
      {
        "source": "/colyseus/(.*)",
        "destination": "/colyseus/$1"
      },
      {
        "source": "/matchmake/(.*)",
        "destination": "/matchmake/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/client/$1"
      }
    ]
  }
  